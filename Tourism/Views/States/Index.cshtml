@model IEnumerable<Tourism.Models.State>
@{
    List<string> allZones = ViewData["AllZones"] as List<string>;
}

<h1>States</h1>
<br />

<h4>States Filter</h4>
@if(ViewData["SearchZone"] != null)
{
    <p>Filtered by: @ViewData["SearchZone"]</p>
}

<p>
    @foreach(var zone in allZones)
    {
        <a href="/states?timeZone=@zone">@zone</a> <span>|</span>
    }
    <a href="/states">Clear Filter</a>
</p>

@foreach (var state in Model)
{
    <p><strong>@state.Abbreviation</strong>: <a href="/states/@state.Id">@state.Name</a></p>

    <form method="post" action="/states/delete/@state.Id">
        <button type="submit">Delete</button>
    </form>
}

<p><a href="/states/new">New State</a></p>
