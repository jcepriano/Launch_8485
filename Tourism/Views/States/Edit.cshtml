@model State

<h1>Edit State Information</h1>

<form method="post" action="/states/@Model.Id">
    <div class="form-group">
        <label for="Name">Name:</label>
        <input type="text" id="Name" name="Name" value="@Model.Name" />
    </div>
    <br />
    <div class="form-group">
        <label for="Abbreviation">Abbreviation:</label>
        <input type="text" id="Abbreviation" name="Abbreviation" value="@Model.Abbreviation" />
    </div>
    <br />
    <div class="form-group">
        <label for="TimeZone">TimeZone:</label>
        <input type="text" id="TimeZone" name="TimeZone" value="@Model.TimeZone" />
    </div>
    <br />

    <button type="submit">Update Movie</button>

</form>